
@using basics.Models
@model Course 

          <div class="card mb-3" id="kurs_@Model.Id">

                <div class="row">
                    <div class="col-md-6">
                        <img src="~/images/@Model.Image" class="img-fluid rounded-end" />

                    </div>

                    <div class="col-md-6">
                        <div class="card-body">
                                <a href="/course/details/@Model.Id">
                                    <h5 class="card-title">@Model.Title</h5>
                                </a>
                                  
                                  <p class="card-text">@Model.Description</p>
                        </div>
                   
                    </div>
                </div>

            </div>  